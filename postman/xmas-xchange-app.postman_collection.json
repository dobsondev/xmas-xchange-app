		{
			"name": "Assignments",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var expectedUsersCount = pm.environment.get(\"expected-users-count\");",
							"pm.test(\"Response has \" + expectedUsersCount + \" items\", function () {",
							"    try {",
							"        var jsonData = pm.response.json();",
							"        var itemCount = Object.keys(jsonData).length;",
							"        pm.expect(itemCount).to.eql(parseInt(expectedUsersCount));",
							"    } catch (e) {",
							"        pm.test(\"Response is not a valid JSON object\", function() {",
							"            throw new Error(\"Response is not a valid JSON object\");",
							"        });",
							"    }",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
